/* 轮播图 */
.banner{
  width: 100%;
  height: 300rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
/* 导航模块 */
.nav{
  display: flex;
}
.nav_li{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.nav_li .iconfont{
  display: block;
  height: 100rpx;
  width:100rpx;
  background-color: #d43c33;
  border-radius: 50%;
  font-size: 50rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  margin: 20px 0 ;
}
.nav_li text:nth-child(2){
  font-size: 26rpx;
}
/* 歌曲推荐模块 */
.aboutmusic{
  padding: 20rpx;
}

/* 歌曲推荐模块的内容区 */
.viewScorll{
  display: flex;
  height: 300rpx;
}
.scrollItem{
  width: 200rpx;
  margin-left: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /*单行文本溢出隐藏*/
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
/* 音乐排行榜 */
.topList{
  padding: 20rpx;
}
.item{
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  display: flex;
}
swiper-item{
  width: 96%;
  background: #fbfbfb;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .num{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicname{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
}
.sw{
  height: 400rpx;
}
